<div class="container mt-5 mb-5">
  <h2>Your cart</h2>
</div>

<div class="container">
  <table class="table table-striped mt-5">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Size</th>
        <th scope="col">Price</th>
        <th scope="col">Quantity</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item[0].title %></td>
        <td><%= item[0].size %></td>
        <td><%= item[0].price %></td>
        <td><%= item[1] %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
